@import "https://fonts.googleapis.com/css?family=Roboto:100,300,400,500,700,900";*{box-sizing:border-box}html,body{height:100%;margin:0}body{color:#0d0c0a;background-color:#ecedef;font-family:Roboto,sans-serif;font-weight:300;overflow-y:scroll}p{line-height:1.5rem}a{color:#d4553d;text-decoration:none}a:hover{text-decoration:underline}h1,h2,h3,h4{font-weight:200}nav{padding:1rem}.row{display:flex;flex-wrap:wrap;min-height:100%}.sidebar{flex:33.3%;color:#ecedef;background-color:#2c3d57;padding:10px;height:auto;min-height:100%;text-align:center}.sidebar a{color:#ecedef}.active{font-weight:700}.main{flex:66.7%;padding:10px;margin-top:5.67rem;padding-left:10%;padding-right:10%}.footer{text-align:center;padding:10px}.copyright{font-weight:200}@media screen and (max-width:700px){.row{flex-direction:column}nav{padding:0}.main{margin:0}}img.avatar{border-radius:50%;border:2px solid #d4553d;height:5rem;display:block;margin:auto;margin-top:.67rem}